<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.score %></td>
        <% if (player.outcome == false) %>
        <td><%=image_tag("Lemon.jpg", alt: "Loser Lemon",:size => "100x60") %></td>
        <% end %>
        <% if (player.outcome == true) %>
        <td><%=image_tag("winner.jpg", alt: "Winner",:size => "100x60") %></td>
        <% end %>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

